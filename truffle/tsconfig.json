{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2015",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types",
            "./app/contracts"
        ],
        "types": [
            "node",
            "truffle-contracts"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "example",
        "build"
    ]
}